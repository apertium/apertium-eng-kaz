<?xml version="1.0" encoding="UTF-8"?>
<!-- -*- nxml -*- -->
<transfer default="chunk">
  <section-def-cats>
    <def-cat n="v-past">
      <cat-item tags="v.*.past.*"/>
    </def-cat>
  </section-def-cats>

  <section-def-attrs>
    <def-attr n="a_nbr">
      <attr-item tags="sg"/>
      <attr-item tags="pl"/>
      <attr-item tags="ND"/>
    </def-attr>
    <def-attr n="a_pers">
      <attr-item tags="p1"/>
      <attr-item tags="p2"/>
      <attr-item tags="p3"/>
      <attr-item tags="PD"/>
    </def-attr>

  </section-def-attrs>
  <section-rules>


<rule comment="RULE: V-have pp"> <!--for present/past perfect-->
      <pattern>
        <pattern-item n="v-past"/>
      </pattern>
      <action>
         <let><clip pos="1" side="sl" part="a_nbr"/><lit-tag v="ND"/></let>
          <choose>
               <when>
                   <test>
                       <equal><clip pos="1" side="sl" part="a_pers"/><lit-tag v="p1"/></equal>
                   </test>
                 <let><clip pos="1" side="sl" part="a_nbr"/><lit v="zzz"/></let>
                </when>
           </choose>
        <out><lu><lit v="+++ HELLO, I AM THE WRONG RULE! +++ The following should be &lt;ND> or &lt;zzz>:"/>
                 <clip pos="1" side="sl" part="a_nbr"/></lu></out>

      </action>
    </rule>


  </section-rules>
</transfer>
